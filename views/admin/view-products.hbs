<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto mt-3 " style="height: 40px; width: 120px">Add Product</a>

        </div>
        <table class="table mt-5 pt-3" id="productsTable">
  <thead class="thead-dark">
    <tr>
      
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th scope="col">Price</th>
      <th>Image</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
      {{#each products}}
    <tr>
      
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td>Rs.{{this.Price}}</td>
      <td><img style="width: 70px; height: 70px" src="/product-images/{{this._id}}.jpg" alt=""></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" 
        onclick="return confirm('Do you want to delete{{this.Name}}?')">Delete</a>
        </td>
    </tr>
    {{/each}}
  </tbody>
</table>
</div>
</section>
<script>
  $( function () {
    $('#productsTable').DataTable();
  });
</script>