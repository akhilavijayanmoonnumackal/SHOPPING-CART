<section>
    <div class="container">
        <table class="table mt-5">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th>Price</th>
                    <th scope="col">Quantity</th>
                    
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    
                    <td><img style="width: 70px; height: 70px" src="/product-images/{{this.product._id}}.jpg" alt=""></td>
                    <td>{{this.product.Name}}</td>
                    <td>Rs.{{this.product.Price}}</td>
                    
                    <td>
                        
                        <button class="cart-item-count mr-3" style="background-color: #587BA3; color:aliceblue" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',-1)">-</button>
                        <span id="{{this.product._id}}">{{this.quantity}}</span>
                        <button class="cart-item-count ml-3" style="background-color: #587BA3; color:aliceblue" onclick="changeQuantity('{{this._id}}','{{this.product._id}}','{{../user._id}}',1)">+</button>
                    </td>
                    <td>
                        <button onclick="removeProduct('{{this.product._id}}','{{this._id}}','{{this.product.Name}}')" class="btn btn-danger">Remove</button>
                    </td>             
                </tr>
                <tr><div class="text-center text-success"><h4 id="delete-msg" class="font-italic"></h4></div></tr>
                {{/each}}
            </tbody>
        </table>
        <hr>
        <div class="float-right pr-5">
            <h3 class="float-right mr-5">TOTAL: Rs. <span id="total">{{totalValue}}</span></h3>
            <a href="/place-order" class="btn btn-success mt-3 " style="width: 100%;">Place Order</a>

        </div>
        
    </div>
</section>

